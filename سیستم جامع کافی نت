<h1 id="welcome">سلام! وقت شما به خیر</h1>
<div id="clock"></div>
<div id="shamsi-date"></div>

<div id="searchContainer">
  <input id="searchInput" type="text" placeholder="جستجو کنید...">
  <button id="searchBtn" onclick="performSearch()">جستجو</button>
</div>

<script>
// حباب‌های متحرک
for(let i=0;i<15;i++){
  let bubble=document.createElement('div');
  bubble.className='bubble';
  bubble.style.width=bubble.style.height=(Math.random()*30+20)+'px';
  bubble.style.left=Math.random()*100+'%';
  bubble.style.background='rgba(255,255,255,'+Math.random()+')';
  bubble.style.animationDuration=(Math.random()*5+5)+'s';
  document.body.appendChild(bubble);
}

// ساعت و تاریخ شمسی ساده
function updateClock(){
    const now=new Date();
    document.getElementById('clock').innerText=now.toLocaleTimeString('fa-IR');
    
    // محاسبه تاریخ شمسی
    const persianDate = new Intl.DateTimeFormat('fa-IR-u-ca-persian', {year:'numeric', month:'2-digit', day:'2-digit'}).format(now);
    document.getElementById('shamsi-date').innerText=persianDate;
}
setInterval(updateClock,1000);
updateClock();

// جستجوی هوشمند
function performSearch(){
    const query = document.getElementById('searchInput').value.trim().toLowerCase();
    if(!query) return;

    // ثبت نام کتاب درسی
    if(query.includes("ثبت نام کتاب درسی")){
        window.open("https://irtextbook.ir/", "_blank");
        return;
    }

    // پاسپورت اربعین یا گذرنامه زیارتی
    if(query.includes("پاسپورت اربعین") || query.includes("گذرنامه زیارتی")){
        window.open("https://samah.haj.ir/", "_blank");
        return;
    }

    // ثبت نام ثنا
    if(query.includes("ثبت نام ثنا")){
        window.open("https://sana.adliran.ir/Sana/Index#/Main", "_blank");
        return;
    }

    // تعویض پلاک یا نوبت تعویض پلاک
    if(query.includes("تعویض پلاک") || query.includes("نوبت تعویض پلاک")){
        window.open("https://nobatdehi.epolice.ir/", "_blank");
        return;
    }

    // ابلاغیه و ثنا
    if(query.includes("ابلاغیه") || query.includes("ابلاغیه ثنا") || query.includes("مشاهده ابلاغیه")){
        window.open("https://iehraz.adliran.ir/Login/Authenticate?ReturnUrl=http://eblagh.adliran.ir/Dashboard/NoticeIndex&SystemName=ENoticeServices&isSelectNaturalPerson=True&isSelectNaturalForigenPerson=True&isSelectLegalPerson=True&isSelectJudPerson=True&LoginTitle=%d8%b3%d8%a7%d9%85%d8%a7%d9%86%d9%87%20%d8%a7%d8%a8%d9%84%d8%a7%d8%ba%20%d8%a7%d9%84%da%a9%d8%aa%d8%b1%d9%88%d9%86%db%8c%da%a9%20%d9%82%d8%b6%d8%a7%db%8c%db%8c", "_blank");
        return;
    }
    if(query.includes("ثنا")){
        window.open("https://sana.adliran.ir/Sana/Index#/Main", "_blank");
        return;
    }

    // شبکه‌ها
    if(query.includes("روبیکا")) { window.open("https://web.rubika.ir/#c=u0IGE4w06cab8a31d00af1e36835af41", "_blank"); return; }
    if(query.includes("ایتا")) { window.open("https://web.eitaa.com/", "_blank"); return; }
    if(query.includes("شاد")) { window.open("https://my.shad.ir/", "_blank"); return; }

    // سایر سایت‌ها
    const sites = [
        {keys:["چت جی پی تی"], url:"https://chatgpt.com/"},
        {keys:["ایرانخودرو","قرعه کشی"], url:"https://ikcosales.ir/"},
        {keys:["سایپا"], url:"https://saipa.iranecar.com/public/home"},
        {keys:["بهمن موتور"], url:"https://bahman.ir/sales"},
        {keys:["وام ازدواج"], url:"https://ve.cbi.ir/DefaultVE.aspx"},
        {keys:["وام فرزند آوری"], url:"https://ve.cbi.ir/vc/TasRequestVC.aspx"},
        {keys:["تایید کد پستی"], url:"https://gnaf2.post.ir/#5/31.77/54.82"},
        {keys:["مرسوله پستی"], url:"https://www.post.ir/"},
        {keys:["بلوک ردیف","بلوک ردیف قرارداد"], url:"https://tax.gov.ir/action/do/GetAddressGeoLocation/"},
        {keys:["پرداخت قبض","پرداخت جریمه خودرو"], url:"https://sadad.shaparak.ir/billpayment"}
    ];

    for(const s of sites){
        if(s.keys.some(k => query.includes(k))) { window.open(s.url, "_blank"); return; }
    }

    // اگر موردی پیدا نشد، هیچ کاری انجام نمی‌دهد
    alert("موردی برای جستجوی شما پیدا نشد.");
}
</script>

</body>
